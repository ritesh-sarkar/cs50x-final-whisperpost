# .env.example

# MongoDB database connection string
DB_URI=your_mongodb_connection_string

# JWT and NextAuth secret keys
JWT_SECRET=your_jwt_secret
NEXT_SECRET=your_next_secret

# Used by NextAuth for OAuth and callbacks
NEXT_AUTH_URL=http://localhost:3000

# Base URL for frontend (change in production)
NEXT_PUBLIC_BASE_URL=https://your-deployment-url.com

# Email (SMTP) settings for sending verification or transactional emails
SMTP_HOST=smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
